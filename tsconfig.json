{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "node_modules/astal/src/jsx"
    },
    "include": [
        "./node_modules/@girs",
        "./src"
    ]
}
